{
	"name": "reprogistry",
	"version": "0.0.0",
	"description": "CLI for checking npm package reproducibility",
	"exports": {
		"./package.json": "./package.json"
	},
	"bin": "./bin.mjs",
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"lint": "eslint .",
		"postlint": "tsc && attw -P",
		"pretest": "npm run lint",
		"tests-only": "c8 --check-coverage tape 'test/**/*.mjs'",
		"test": "npm run tests-only",
		"posttest": "npx npm@\">= 10.2\" audit --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reprogistry/reprogistry.git",
		"directory": "packages/cli"
	},
	"keywords": [
		"npm",
		"registry",
		"reproducibility",
		"reproducible",
		"builds",
		"purl"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/reprogistry/reprogistry/issues"
	},
	"homepage": "https://github.com/reprogistry/reprogistry/tree/main/packages/cli#readme",
	"dependencies": {
		"npm-package-arg": "^13.0.2",
		"pacote": "^21.0.4",
		"pargs": "^1.2.2",
		"purl": "^2.1.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@ljharb/eslint-config": "^22.1.3",
		"@ljharb/tsconfig": "^0.3.2",
		"@types/tape": "^5.8.1",
		"auto-changelog": "^2.5.0",
		"c8": "^10.1.3",
		"eslint": "^9.39.1",
		"npmignore": "^0.3.5",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.9.0",
		"typescript": "next"
	},
	"engines": {
		"node": "^22.20 || ^24.13 || >= 25.3"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows",
			"test",
			"eslint.config.mjs",
			"tsconfig.json"
		]
	}
}
